<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>KedaiKerepekMaksu</display-name>
  <!-- Welcome file configuration -->
    <welcome-file-list>
        <welcome-file>Login.html</welcome-file>
    </welcome-file-list>

    <!-- Servlet Mappings for com.controller.account -->
    <servlet>
        <servlet-name>CreateStaffServlet</servlet-name>
        <servlet-class>com.controller.account.CreateStaffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateStaffServlet</servlet-name>
        <url-pattern>/createStaff</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.controller.account.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.controller.account.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.controller.account.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <servlet-class>com.controller.account.UpdateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <url-pattern>/updateAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewAccountServlet</servlet-name>
        <servlet-class>com.controller.account.ViewAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAccountServlet</servlet-name>
        <url-pattern>/viewAccount</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mappings for com.controller.product -->
    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.controller.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/createProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.controller.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>com.controller.product.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/updateProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProductStatusServlet</servlet-name>
        <servlet-class>com.controller.product.UpdateProductStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProductStatusServlet</servlet-name>
        <url-pattern>/updateProductStatus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewProductServlet</servlet-name>
        <servlet-class>com.controller.product.ViewProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProductServlet</servlet-name>
        <url-pattern>/viewProduct</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mappings for com.controller.report -->
    <servlet>
        <servlet-name>ReportController</servlet-name>
        <servlet-class>com.controller.report.ReportController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportController</servlet-name>
        <url-pattern>/generateReport</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mappings for com.controller.sale -->
    <servlet>
        <servlet-name>CompleteSaleServlet</servlet-name>
        <servlet-class>com.controller.sale.CompleteSaleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompleteSaleServlet</servlet-name>
        <url-pattern>/completeSale</url-pattern>
    </servlet-mapping>
</web-app>